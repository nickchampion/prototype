{
  "name": "@hectare/geo",
  "version": "0.0.1",
  "author": "derek.lewis@hectare.farm",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=7.8"
  },
  "private": true,
  "workspaces": [
    "../../core"
  ],
  "scripts": {
    "check:env": "ts-node -p ./env-checker.ts --transpile-only",
    "predev": "rm -rf compiled-env.yml && ts-node -p ../../env-checker.ts --transpile-only",
    "dev": "rm -rf .build && sls offline start --stage local --region eu-west-2",
    "uk:sandbox": "rm -rf .build && sls offline start --stage sandbox --region eu-west-2",
    "af:sandbox": "rm -rf .build && sls offline start --stage sandbox --region af-south-1",
    "deploy:full": "rm -rf .build .serverless && sls deploy --stage dev --region eu-west-2",
    "deploy:api-v1": "rm -rf .build .serverless && sls deploy function -f api-v1 --stage dev --region eu-west-2",
    "deploy:config": "rm -rf .build .serverless && sls deploy --config serverless.yml --stage dev --region eu-west-2",
    "test": "jest --watchAll --no-cache",
    "test:ci": "jest"
  },
  "dependencies": {
    "@hectare/core": "^0.0.1",
    "axios": "0.21.2",
    "express": "4.17.2",
    "serverless-offline-aws-eventbridge": "1.6.6"
  },
  "devDependencies": {
    "glob": "7.2.0",
    "jest": "26.6.3",
    "js-yaml": "3.14.1",
    "mongodb-memory-server": "6.9.6",
    "mongoose": "5.13.14",
    "msw": "0.28.1",
    "serverless": "2.38.0",
    "serverless-api-gateway-caching": "1.7.5",
    "serverless-dotenv-plugin": "3.9.0",
    "serverless-latest-layer-version": "2.1.1",
    "serverless-offline": "6.9.0",
    "serverless-plugin-optimize": "*",
    "serverless-plugin-scripts": "1.0.2",
    "serverless-plugin-typescript": "1.1.9",
    "serverless-prune-plugin": "1.6.1",
    "supertest": "6.1.3",
    "ts-jest": "26.5.5",
    "ts-node": "10.4.0",
    "typescript": "4.2.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFiles": [
      "./testing/env.ts"
    ],
    "setupFilesAfterEnv": [
      "./testing/setup.ts"
    ],
    "collectCoverageFrom": [
      "src/functions/**/*.ts"
    ],
    "moduleNameMapper": {
      "^@libs/(.*)": "<rootDir>/src/libs/$1",
      "^@functions/(.*)": "<rootDir>/src/functions/$1"
    }
  }
}
