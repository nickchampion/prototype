  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch",
      "type": "node",
      "request": "launch",
      "sourceMaps": true,
      "runtimeArgs": [
          "-r",
          "ts-node/register"
      ],
      "args": [
          "${workspaceFolder}/app/index.ts"
      ]
    },
    {
      "name": "Attach",
      "type": "node",
      "request": "attach",
      "port": 9001,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "sourceMaps": true,
    }
  ]
}