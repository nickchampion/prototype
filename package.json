{
  "name": "@hectare/platform",
  "version": "0.0.1",
  "author": "derek.lewis@hectare.farm",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=7.8"
  },
  "devDependencies": {
    "@redocly/openapi-cli": "1.0.0-beta.80",
    "@types/jest": "26.0.22",
    "@types/js-yaml": "4.0.5",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "eslint": "7.24.0",
    "eslint-config-prettier": "8.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.3.5",
    "eslint-plugin-json": "2.1.2",
    "eslint-plugin-prettier": "3.4.1",
    "eslint-plugin-react": "7.23.2",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "mongodb-memory-server": "6.9.6",
    "msw": "0.28.1",
    "prettier": "2.4.1",
    "prettier-eslint": "12.0.0",
    "pretty-quick": "3.1.3",
    "serverless-offline": "8.4.0",
    "supertest": "6.1.3",
    "typescript": "4.2.4"
  },
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --quiet",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "prettier": "prettier --write .",
    "api:clean": "rm -f sites/api-docs/data/api-specs/v1/**/*.json",
    "api:bundle:public": "openapi bundle -o sites/api-docs/data/api-specs/v1/public/ --ext json",
    "api:bundle:private": "openapi bundle --skip-decorator=private-paths/remove-private-operations -o sites/api-docs/data/api-specs/v1/private/ --ext json ",
    "api:bundle": "npm run api:clean && npm run api:bundle:public && npm run api:bundle:private && npm run api:lint",
    "api:lint": "openapi lint sites/api-docs/data/api-specs/v1/**/*.json",
    "prepare": "husky install",
    "dev:rebuild:core": "cd $INIT_CWD/core && npm ci && npm run build",
    "dev:rebuild:data": "cd $INIT_CWD/services/data && npm ci",
    "dev:rebuild:auth": "cd $INIT_CWD/services/auth && npm ci",
    "dev:rebuild:comms": "cd $INIT_CWD/services/comms && npm ci",
    "dev:rebuild:estimator": "cd $INIT_CWD/services/estimator && npm ci",
    "dev:rebuild:finance": "cd $INIT_CWD/services/finance && npm ci",
    "dev:rebuild:geo": "cd $INIT_CWD/services/geo && npm ci",
    "dev:rebuild:hectare-proxy": "cd $INIT_CWD/services/hectare-proxy && npm ci",
    "dev:rebuild:logging": "cd $INIT_CWD/services/logging && npm ci",
    "dev:rebuild:logistics": "cd $INIT_CWD/services/logistics && npm ci",
    "dev:rebuild:system": "cd $INIT_CWD/services/system && npm ci",
    "dev:rebuild:transport-assets": "cd $INIT_CWD/services/transport-assets && npm ci",
    "dev:rebuild:all": "npm run dev:rebuild:core &&  npm run dev:rebuild:data  &&  npm run dev:rebuild:auth  &&  npm run dev:rebuild:comms &&  npm run dev:rebuild:estimator &&  npm run dev:rebuild:finance &&  npm run dev:rebuild:geo &&  npm run dev:rebuild:logistics &&  npm run dev:rebuild:system && npm run dev:rebuild:transport-assets"
  },
  "dependencies": {
    "middy": "0.36.0"
  }
}
